<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".HomeFragment">

    <LinearLayout
        android:id="@+id/backgroundLayout"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical"
        android:background="@color/appicon_darkblue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <ImageView
        android:id="@+id/ivAppIcon"
        android:src="@drawable/app_icon_white"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/tvHomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_title"
        android:layout_marginTop="40dp"
        android:textColor="@color/appicon_darkblue"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/ivAppIcon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/tvTitleDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_titleDesc"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/tvHomeTitle"
        app:layout_constraintLeft_toLeftOf="@+id/tvHomeTitle"
        />

    <ImageButton
        android:id="@+id/imageBtnRefreshRoom"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/refresh"
        android:backgroundTint="@color/white"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="@+id/tvHomeTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvHomeTitle"/>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayoutIPAddress"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:hint="@string/ipAddress"
        android:layout_marginTop="5dp"
        android:textColorHint="@color/light_grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/userInputIPAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textColorHint="@color/dark_grey"
            android:importantForAccessibility="yes"
            android:textSize="15sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Spinner
        android:id="@+id/spinnerRoom"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/inputLayoutIPAddress"
        app:layout_constraintLeft_toLeftOf="@+id/inputLayoutIPAddress"
        app:layout_constraintRight_toRightOf="@+id/inputLayoutIPAddress"/>

    <Button
        android:id="@+id/btnIPSubmit"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="@string/Stream"
        android:backgroundTint="@color/appicon_darkblue"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/spinnerRoom"
        app:layout_constraintLeft_toLeftOf="@+id/inputLayoutIPAddress"
        app:layout_constraintRight_toRightOf="@+id/inputLayoutIPAddress"/>




</androidx.constraintlayout.widget.ConstraintLayout>